# -*- mode: yaml -*-

manifest:
  version: 1.0

urgency: {{ pr.title | gpt(pr.description) }}
colors:
	urgency-level-1: 'BE2908'
	urgency-level-2: 'F5881B'
	urgency-level-3: 'F7D515'
	urgency-level-4: '84C42A'
	urgency-level-5: '559200'

on:
  - pr_created
automations:
  add_urgency_label:
    if:
      - true
    run:
      - action: add-label@v1
        args:
          label: {{ urgency }}
          color: {{ colors[urgency] }}
