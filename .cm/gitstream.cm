# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  send_slack:
    if:
      - true
    run:
      - action: send-slack-message@v1
        args:
          webhook_url: "{{ slack_keys[experts[0]] }}"
          message: "A message sent from GitStream!"
  test_nested:
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: {{ experts }}
  code_experts:
    if:
      - true
    run:
      - action: explain-code-experts@v1 
        args:
          gt: 0

experts: {{ repo | codeExperts(gt=0) }}

slack_keys:
  jadenguitarman: {{ env.GITSTREAM_SLACK_JADEN }}
  elena: {{ env.GITSTREAM_SLACK_ELENA }}
