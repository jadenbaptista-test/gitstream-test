# -*- mode: yaml -*-

manifest:
  version: 1.0

pr_url: "https://github.com/{{ repo.owner }}/{{ repo.name }}/pull/{{ pr.number }}"

automations:
  add_comment:
    if:
      - true
    run:
      - action: send-slack-message@v1
        args:
          webhook_url: "{{ SLACK_WEBHOOK }}"
          message: '{ reviewers: "{{ pr.reviewers }}" }'
