# -*- mode: yaml -*-

manifest:
  version: 1.0
  
automations:
  send_slack_qa:
    if:
      - {{ not (files | match(regex=r/(test|spec)/) | some) }}
    run:
      - action: send-slack-message@v1
        args:
          webhook_url: "{{ env.SLACK_WEBHOOK }}"
          message: "A PR was submitted without tests. See https://github.com/{{ repo.owner }}/{{ repo.name }}/pull/{{ pr.number }}"
