# -*- mode: yaml -*-

manifest:
  version: 1.0

pr_url: "https://github.com/{{ repo.owner }}/{{ repo.name }}/pull/{{ pr.number }}"

automations:
  create_gpt_description:
    if:
      - true
    run:
      - action: send-slack-message@v1
        args:
          message: {{ pr.title | gpt(pr.description, pr.comments, pr_url) }}
          webhook_url: "{{ env.SLACK_WEBHOOK }}"
